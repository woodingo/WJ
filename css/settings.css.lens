    vertical-align: top;
    padding: 0 30px 1em 0;
    margin: 0
}

div.essay-previews ol li:last-child {
    padding-right: 0
}

.bitcon:active,
.bitcon:hover,
.bitcon:link,
.bitcon:visited {
