}

#kdiscuss {
    margin-top: 2rem;
    float: left;
    clear: left;
    width: 100%;
    position: relative
}

.social {
    display: inline-block;
    float: right
}

.social span {
    display: inline-block;
    line-height: 0;
}

.social span.fb {
